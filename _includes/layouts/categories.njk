---
layout: layouts/base.njk
---
<h1>{{ title }}</h1>

{{ layoutContent | safe }}

{% set postslist = collections[filter] %}

<section>
	{% for post in postslist %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Sen t√≠tulo
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
		</article>
	{% endfor %}
</section>

